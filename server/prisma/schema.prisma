generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

// User Model
model User {
  id        String  @id @default(uuid())
  username  String  @unique
  email     String  @unique
  password  String
  role      Role    @default(USER)
}

model Category {
  id          String    @id @default(uuid())
  Title       String
  Description String
  Image       String?
  Products    Procuts[]
}

model Procuts {
  id          String   @id @default(uuid())
  Title       String
  Description String
  Prix        Float
  Category    Category @relation(fields: [CatId], references: [id])
  CatId       String
}
